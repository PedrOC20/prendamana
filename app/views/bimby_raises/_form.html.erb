<div class="container">
  <h2 class="h2-form">Basta preencheres o formulário e está feito. Obrigado</h2>
  <%= simple_form_for(@bimby_raise) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-group pt-3">
      <%= f.input :first_name, input_html: { placeholder: "First Name"} %>
      <%= f.input :last_name, input_html: { placeholder: "Last Name"} %>
      <%= f.input :amount, input_html: { placeholder: "Amount"} %>
    </div>

    <div class="form-actions d-flex justify-content-center pt-3">
      <%= f.button :submit, "Raise your Gift", class: "btn-create" %>
    </div>
  <% end %>
</div>
