<h1>Bimby Raises</h1>

<h3>Total Amount: </h3>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bimby_raises.each do |bimby_raise| %>
      <tr>
        <td><%= bimby_raise.first_name %></td>
        <td><%= bimby_raise.last_name %></td>
        <td><%= bimby_raise.amount %></td>
        <td><%= link_to 'Show', bimby_raise %></td>
        <td><%= link_to 'Edit', edit_bimby_raise_path(bimby_raise) %></td>
        <td><%= link_to 'Destroy', bimby_raise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

